@model IEnumerable<WebApp_Peluqueria.Models.Tratamiento>

@{
    ViewData["Title"] = "Resumen Financiero";
}


<form asp-action="ResumenFinanciero" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <label for="mes" class="form-label">Mes</label>
            <select id="mes" name="mes" class="form-select">
                <option value="">Todos</option>
                @for (int i = 1; i <= 12; i++)
                {
                    if (ViewBag.Mes == i)
                    {
                        @:
                        <option value="@i" selected>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                    }
                    else
                    {
                        @:
                        <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-3">
            <label for="anio" class="form-label">Año</label>
            <select id="anio" name="anio" class="form-select">
                <option value="">Todos</option>
                @for (int i = DateTime.Today.Year - 5; i <= DateTime.Today.Year; i++)
                {
                    if (ViewBag.Anio == i)
                    {
                        @:
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        @:
                        <option value="@i">@i</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Descripción</th>
            <th>Ingreso</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@item.Cliente.Nombre @item.Cliente.Apellido</td>
                <td>@item.Descripcion</td>
                <td>$@item.Precio</td>
            </tr>
        }
        <tr>
            <td colspan="3"><strong>Total del Mes</strong></td>
            <td><strong>$@ViewBag.TotalMes</strong></td>
        </tr>
    </tbody>
</table>

<h4>Total del Año: $@ViewBag.TotalAnio</h4>
