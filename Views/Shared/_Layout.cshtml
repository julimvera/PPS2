<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Peluquería</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            padding-top: 60px;
        }

        .footer {
            margin-top: 40px;
            padding: 10px 0;
            background-color: #f8f9fa;
            text-align: center;
            color: #666;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/images/icono_planilladiaria.png" alt="Planilla Icono" style="height:24px; margin-right:8px;">
                Planilla diaria
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExampleDefault"
                    aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Clientes" ? "active" : "")" href="@Url.Action("Index", "Clientes")">
                            <img src="~/images/icono_clientes.png" alt="Clientes Icono" style="height:20px; margin-right:6px;">
                            Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "ResumenFinanciero" ? "active" : "")" href="@Url.Action("ResumenFinanciero", "Home")">
                            <img src="~/images/icono_resumenFinanciero.png" alt="Resumen Icono" style="height:20px; margin-right:6px;">
                            Resumen Financiero
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        <div class="py-3">
            <h1>@ViewData["Title"]</h1>
            <hr />
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <small>&copy; 2025 Peluquería - Todos los derechos reservados.</small>
        </div>
    </footer>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>